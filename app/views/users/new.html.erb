<h1><%= get_tablename_by_model(@user) %>登録画面</h1>

<%= render 'form_msgerr', model_info: @user %>
<!--↑エラーメッセージ表示枠-->



<%= form_with(model:@user,local: true ) do |f| %>

<%= f.label "名前" %>
<%= f.text_field :name %>

<%= f.label "メールアドレス" %>
<%= f.email_field :email %>

<%= f.label "パスワード" %>
<%= f.password_field :password %>

<%= f.label "パスワード(確認用)" %>
<%= f.password_field :password_confirmation %>

<%= f.submit "ユーザーを登録します。" %>

<% end %>
